{
  "compilerOptions": {
    "baseUrl": "src/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "es2022"
  },
  "include": [
     "jest.config.ts",
     "src"
   ]
}
